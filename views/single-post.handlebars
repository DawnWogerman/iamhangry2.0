<article class="post">
  <div class="location">
    {{post.user.username}} was in {{post.location}} on drink {{post.num_of_drinks}}
  </div>
  <div class="meta">
    {{post.vote_count}} point(s) by {{post.user.username}} on
    {{post.created_at}}
    |
    <a href="/post/{{post.id}}">{{post.review.length}} reviews(s)</a>
  </div>
</article>

<form class="review-form">
  <div>
    <textarea name="review-body"></textarea>
  </div>

  <div>
    <button type="submit">Add Review</button>
    <button type="button" class="lit-btn">Lit</button>
  </div>
</form>

<div class="reviews">
  {{#each post.reviews}}
  <section class="review">
    <div class="meta">
      {{user.username}} on {{created_at}}
    </div>
    <div class="text">
      {{review_text}}
    </div>
  </section>
  {{/each}}
</div>
{{!-- {{#if loggedIn}} --}}
<script src = "/javascript/review.js"></script>
<script src = "/javascript/lit.js"></script>
{{!-- {{/if}} --}}